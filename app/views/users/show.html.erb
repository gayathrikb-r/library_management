<div class="card">
  <h1><%= @user.name %></h1>

  <p><strong>Email:</strong> <%= @user.email %></p>
  <p><strong>Phone:</strong> <%= @user.phone || "Not provided" %></p>
</div>

<% if current_user == @user %>
  <div class="card">
    <h2>My Statistics</h2>
    <p><strong>Active Borrowings:</strong> <%= @user.active_borrowings_count %></p>
    <p><strong>Total Borrowings:</strong> <%= @user.borrowings.count %></p>
    <p><strong>Reviews Written:</strong> <%= @user.reviews.count %></p>
  </div>
<% end %>
