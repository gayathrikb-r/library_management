<div class="card">
  <h1><%= @user.name %>'s Profile</h1>
  
  <h3>Bio</h3>
  <p><%= @profile.bio || "No bio yet" %></p>
  
  <h3>Birth Date</h3>
  <p><%= @profile.birth_date&.strftime("%B %d, %Y") || "Not provided" %></p>
  
  <h3>Liked Genres</h3>
  <p><%= @profile.liked_genres || "No preferences set" %></p>
  
  <%= link_to "Edit Profile", edit_user_profile_path(@user), class: "btn" %>
  <%= link_to "Back to Account", @user, class: "btn btn-secondary" %>
</div>