<div class="card">
  <h1>Edit Profile Details</h1>
  
  <%= form_with model: @profile, url: user_profile_path(@user) do |f| %>
    <div class="form-group">
      <%= f.label :bio, "About Me" %>
      <%= f.text_area :bio %>
    </div>
    
    <div class="form-group">
      <%= f.label :birth_date %>
      <%= f.date_field :birth_date %>
    </div>
    
    <div class="form-group">
      <%= f.label :liked_genres, "Favorite Genres (comma-separated)" %>
      <%= f.text_field :liked_genres, placeholder: "Mystery, Science Fiction, Romance" %>
    </div>
    
    <%= f.submit "Update Profile", class: "btn" %>
    <%= link_to "Cancel", user_profile_path(@user), class: "btn btn-secondary" %>
  <% end %>
</div>